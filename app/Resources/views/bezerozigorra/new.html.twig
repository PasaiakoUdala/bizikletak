{% extends 'base.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap-datetimepicker.min.css') }}">

{% endblock %}

{% block main %}
    <div id="flash-messages"></div>
    <section class="content-header">
        <div class="row">
            <div class="col-sm-5">
                <h1 class="title">Zigor berria</h1>
            </div>
        </div>
    </section>

    <section id="main" class="content">
        {{ form_start(form) }}
        <div class="row">
            {{ form_errors(form) }}
            <div class="col-sm-12 large">
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="fa fa-edit"></i>
                        <h3 class="box-title">Sartu datuak eta gorde</h3>
                    </div>
                    <div class="box-body pad">
                        <div class="row">
                            <div class="col-sm-12 large">
                                &nbsp;
                                <br>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group  field-text">
                                    {{ form_label(form.bezeroa, 'Bezeroa', { 'label_attr': {'class': 'control-label'} }) }}
                                    {{ form_errors(form.bezeroa) }}
                                    {{ form_widget(form.bezeroa, {'attr': {'class': 'form-control', 'data-widget':'select2'}}) }}
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group  field-text">
                                    {{ form_label(form.zigorra, 'Zigorra', { 'label_attr': {'class': 'control-label'} }) }}
                                    {{ form_errors(form.zigorra) }}
                                    {{ form_widget(form.zigorra, {'attr': {'class': 'form-control', 'data-widget':'select2'}}) }}
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group  field-text">
                                    {{ form_label(form.zigorraHasi, 'Zigorra hasi', { 'label_attr': {'class': 'control-label'} }) }}
                                    {{ form_errors(form.zigorraHasi) }}
                                    {{ form_widget(form.zigorraHasi, {'attr': {'class': 'form-control form_datetime',}}) }}
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group  field-text">
                                    {{ form_label(form.zigorraAmaitu, 'Zigorra amaitu', { 'label_attr': {'class': 'control-label'} }) }}
                                    {{ form_errors(form.zigorraAmaitu) }}
                                    {{ form_widget(form.zigorraAmaitu, {'attr': {'class': 'form-control form_datetime', 'data-widget':'select2'}}) }}
                                </div>
                            </div>

                            <div class="col-xs-12 form-actions" style="width: 100%;">
                                <div class="form-group">
                                    <div id="form-actions-row">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save"></i> Zirgortu
                                        </button>
                                        <a class="btn btn-secondary action-list" href="{{ path('kudeatu_bezerozigorra_index') }}">Ezeztatu eta itzuli</a>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>

{% endblock %}

{% block body_javascript %}
    {{ parent() }}

    <script src="{{ asset('bundles/app/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/bootstrap-datetimepicker.eu.js') }}"></script>

    <script type="text/javascript">
        $(function() {

            // Select2 widget is only enabled for the <select> elements which explicitly ask for it
            $('#main').find('form select[data-widget="select2"]').select2({
                theme: 'bootstrap'
            });
        });
    </script>
    <script type="text/javascript">
        $('.form_datetime').datetimepicker({
            language:  'eu',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 1
        });
    </script>
{% endblock %}