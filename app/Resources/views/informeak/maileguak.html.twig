{% extends 'base.html.twig' %}

{% block main %}
    {% if bizikletak is defined %}
        <section id="emaitzak" class="content">

            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Bizikletak</h3>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody>
                                <tr>
                                    <th>Nondik</th>
                                    <th>Nora</th>
                                    <th>Zenbat</th>
                                </tr>
                                {% for b in mailegukop %}
                                    <tr>
                                        <td>{{ b.mailegukop }}</td>
                                        <td>{{ b[0].kodea }}</td>
                                        <td>{{ b[0].oharrak | raw }}</td>
                                        <td>{% if b[0].alokatua == true %}Bai{% else %}Ez{% endif %}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    {% endif %}
{% endblock %}

