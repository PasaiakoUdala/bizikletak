{% extends 'base.html.twig' %}

{% block main %}
    {% if bizikletak is defined %}
        <section id="emaitzak" class="content">

            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Guneak - Bizikletak</h3>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody><tr>
                                    <th>Gunea</th>
                                    <th>Bizikleta Kopurua</th>
                                    <th>Arazo Mekanikoekin</th>
                                </tr>
                                {% for g in guneak %}
                                    <tr>
                                        <td>{{ g.izena }}</td>
                                        <td>{% if g.bizikletak.count is defined %}{{ g.bizikletak | length }}{% endif %}</td>
                                        <td>{% set ongi=0 %}
                                            {% if g.bizikletak.count is defined %}
                                                {% for b in g.bizikletak if b.oharrak is not empty %}
                                                    {% set ongi = ongi+1 %}
                                                {% endfor %}
                                            {% endif %}
                                            {{ ongi }}
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Bizikletak</h3>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Mailegu Kopurua</th>
                                        <th>Kodea</th>
                                        <th>Ohar Mekanikoak</th>
                                        <th>Alokatua</th>
                                    </tr>
                                    {% for b in bizikop %}
                                    <tr>
                                        <td>{{ b.mailegukop }}</td>
                                        <td>{{ b[0].kodea }}</td>
                                        <td>{{ b[0].oharrak | raw }}</td>
                                        <td>{% if b[0].alokatua == true %}Bai{% else %}Ez{% endif %}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    {% endif %}
{% endblock %}

