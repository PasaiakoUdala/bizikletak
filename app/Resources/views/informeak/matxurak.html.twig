{% extends 'base.html.twig' %}

{% block main %}
    {% if bizikletak is defined %}
        <section id="emaitzak" class="content">

            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Bizikleten matxurak</h3>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Bizikleta</th>
                                        <th>Kodea</th>
                                        <th>Matxura</th>
                                    </tr>
                                    {% for b in bizikletak %}
                                    <tr>
                                        <td>{{ b.id }}</td>
                                        <td>{{ b.kodea}}</td>
                                        <td>
                                            {% if b.matxurak is defined %}
                                                <ul class="list-unstyled">
                                                    {% for m in b.matxurak %}
                                                        <li> - {{ m }} <a href="#" class="label label-danger btnEzabatu"><i class="fa fa-trash" aria-hidden="true"></i></a></li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    {% endif %}
{% endblock %}

