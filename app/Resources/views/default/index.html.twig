{% extends 'base.html.twig' %}

{% block head_javascript %}
    {{ parent() }}

    <script src="https://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.22&key=AIzaSyBXzdT5v5Gjw1XkgNqUU5jKJJ00oYC4dmo"
            xmlns="http://www.w3.org/1999/html"></script>
    <script src="{{ asset('bundles/app/js/maplace.min.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript">
        $(function() {

            var url = '{{ path('gunedatuak', {"callback": "fos.Router.setData"}) }}';

            $.getJSON(url)
            .done(function( data ) {
                new Maplace({
                    locations: data,
                    map_div: '#gmap',
                    controls_type: 'list',
                    controls_on_map: true
                }).Load();
            });


        });
    </script>
{%  endblock %}

{% block body %}

    <div id="wrapper">
        <div id="content-wrapper">
            <section class="content-header">
                <h1>
                    Bizikleta Mailegu Zerbitzua
                    <small>Kontrol panela</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Hasiera</a></liclass>
                </ol>
            </section>
            <section class="content">

                <div class="row">

                    <div class="col-md-12">

                        <div class="box">
                            <div class="box-header with-border">
                                {#<h3 class="box-title">Bizikleta guneen informazio eguneratua</h3>#}
                            </div>
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p class="text-center">
                                            <strong>Bizikleta guneen informazio eguneratua</strong>
                                        </p>

                                        <div id="controls"></div>
                                        <div id="gmap" style="height:500px;"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                <div class="row">

                                    {% set columns = 4 %}
                                    {% for g in guneak %}
                                        {% if loop.first or loop.index0 is divisibleby(columns) %}
                                            <div class="row">
                                        {% endif %}

                                        <div class="col-md-3 col-sm-6 col-xs-12">
                                            <div class="info-box">
                                                <span class="info-box-icon bg-green"><i class="ion ion-ios-gear-outline">{{ g.bizikletak | length }}</i></span>

                                                <div class="info-box-content">
                                                    <span class="info-box-text">{{ g.izena }}</span>
                                                    <span class="info-box-number">{{ g.ordutegia }}</span>
                                                </div>
                                                <!-- /.info-box-content -->
                                            </div>
                                            <!-- /.info-box -->
                                        </div>

                                        {% if loop.last or loop.index is divisibleby(columns) %}
                                            </div>
                                        {% endif %}
                                    {% endfor %}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

             </section>
        </div>
    </div>

{% endblock %}


